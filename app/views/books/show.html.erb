<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="row">
        <%= render "users/user_info", user: @user %>
      </div>
      <div class="row">
        <%= render "books/new", book: @book %>
      </div>
    </div>
    <div class="col-8">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @books.user.get_profile_image(100 , 100) %>
              <p><%= link_to @books.user.name, user_path(@books.user.id) %></p>
            </td>
            <td><%= link_to @books.title %></td>
            <td><%= @books.body %></td>


            <% if @books.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@books), method: :delete do %>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
              <% end %>
            </td>
            <% else %>
            <td>
              <%= link_to book_favorites_path(@books), method: :post do %>
                <i class="fas fa-heart" aria-hidden="true"></i>
              <% end %>
            </td>
            <% end %>

            <td>コメント数：<%= @books.book_comments.count %></td>

            <% if @books.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger " %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <div>
        <table>
          <tbody>
            <% @books.book_comments.each do |book_comment| %>
            <tr>
              <td>
                <%= link_to user_path(book_comment.user) do %>
                  <%= image_tag book_comment.user.get_profile_image(100, 100) %></br>
                  <%= book_comment.user.name %>
                <% end %>
              </td>
              <td><%= book_comment.comment %></td>
              <td>
                <% if book_comment.user == current_user %>
                  <%= link_to "削除する", book_book_comment_path(@books, book_comment), method: :delete %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div>
        <%= form_with model: [@books, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "w-100" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
